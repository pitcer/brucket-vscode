{
  "name": "brucket",
  "displayName": "Brucket",
  "description": "Brucket language support",
  "version": "0.0.1",
  "publisher": "pitcer",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "brucket",
        "extensions": [
          ".bk"
        ],
